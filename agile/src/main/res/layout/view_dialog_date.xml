<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_dialog_bg"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="日期选择"
        android:textColor="@color/colorBlack"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="年" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="月" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="日" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <com.limh.agile.wheelview.WheelView
            android:id="@+id/wv_year"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_weight="1" />

        <com.limh.agile.wheelview.WheelView
            android:id="@+id/wv_month"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_weight="1" />

        <com.limh.agile.wheelview.WheelView
            android:id="@+id/wv_day"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_weight="1" />

        <com.limh.agile.wheelview.WheelView
            android:id="@+id/wv_hour"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_weight="1" />

        <com.limh.agile.wheelview.WheelView
            android:id="@+id/wv_minute"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="#6FB1ED"
            android:textSize="16sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorHotGray" />

        <TextView
            android:id="@+id/txt_dialog_yes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="#6FB1ED"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>